<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="What are you looking for?"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Banner ViewPager"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </HorizontalScrollView>
            <TextView
                android:id="@+id/txtBestSelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Best-selling products"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBestSelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </HorizontalScrollView>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameBottomnavbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="267dp">
            <FrameLayout android:id="@+id/frameStackhome"
                android:layout_height="@dimen/_97pxv" android:layout_width="match_parent">
                <LinearLayout android:id="@+id/linearRow"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylered_A400">
                    <LinearLayout android:id="@+id/linearRowhome"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:layout_marginStart="@dimen/_21pxh"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_weight="0.49"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:id="@+id/linearColumnhome"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_weight="0.73"
                            android:layout_width="0dp" android:orientation="vertical">
                            <ImageView android:id="@+id/imageHome"
                                android:layout_gravity="start"
                                android:layout_height="@dimen/_25pxh"
                                android:layout_marginEnd="@dimen/_55pxh"
                                android:layout_width="@dimen/_21pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_home"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_home"/>
                            <View
                                android:background="@drawable/rectangle_bg_amber_300_70_radius_12"
                                android:id="@+id/viewEllipseTwenty"
                                android:layout_gravity="start"
                                android:layout_height="@dimen/_8pxh"
                                android:layout_marginEnd="@dimen/_62pxh"
                                android:layout_marginStart="@dimen/_7pxh"
                                android:layout_marginTop="@dimen/_4pxv" android:layout_width="@dimen/_8pxh"/>
                        </LinearLayout>
                        <FrameLayout android:id="@+id/frameShapesheart"
                            android:layout_height="@dimen/_31pxv"
                            android:layout_marginBottom="@dimen/_9pxv"
                            android:layout_width="@dimen/_29pxh">
                            <ImageView android:id="@+id/imgFavorite"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_22pxh"
                                android:layout_marginBottom="@dimen/_4pxv"
                                android:layout_marginEnd="@dimen/_2pxh"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_marginTop="@dimen/_4pxv"
                                android:layout_width="@dimen/_24pxh"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription" tools:src="@drawable/ic_favorite"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/linearRowmenu"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_18pxh"
                        android:layout_marginStart="@dimen/_132pxh"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_weight="0.51"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <FrameLayout android:id="@+id/frameChatchat"
                            android:layout_height="@dimen/_31pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_width="@dimen/_29pxh">
                            <ImageView android:id="@+id/imageMenu"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_25pxh"
                                android:layout_marginHorizontal="@dimen/_2pxh"
                                android:layout_marginVertical="@dimen/_2pxv"
                                android:layout_width="@dimen/_24pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_chat"
                                tools:ignore="ContentDescription" tools:src="@drawable/ic_chat"/>
                        </FrameLayout>
                        <FrameLayout android:id="@+id/frameUsersaccount"
                            android:layout_height="@dimen/_31pxv"
                            android:layout_marginStart="@dimen/_52pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_width="@dimen/_29pxh">
                            <ImageView android:id="@+id/imageUser"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_25pxh"
                                android:layout_marginHorizontal="@dimen/_2pxh"
                                android:layout_marginVertical="@dimen/_2pxv"
                                android:layout_width="@dimen/_24pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_person"
                                tools:ignore="ContentDescription" tools:src="@drawable/ic_person"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:backgroundTint="@color/white_A700"
                    android:id="@+id/floatingBtnFloatingactionbutton"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_163pxh"
                    android:layout_marginStart="@dimen/_163pxh"
                    android:layout_width="wrap_content"
                    app:fabCustomSize="@dimen/_61pxh"
                    android:contentDescription="Go to Cart"
                    app:srcCompat="@drawable/img_cart" app:tint="@color/red_A400"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>