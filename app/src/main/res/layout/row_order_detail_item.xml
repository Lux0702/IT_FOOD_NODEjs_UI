<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:id="@+id/linearRowellipsetwentyTwo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProduct"
                android:layout_height="@dimen/_90pxh"
                android:layout_weight="3"
                android:layout_width="@dimen/_90pxh"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse20_60x60"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txtNameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textSize="@dimen/_18pxh"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtDescriptionProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pizza"
                        android:textSize="@dimen/_16pxh"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:layout_weight="7"/>
                    <TextView
                        android:id="@+id/txtQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="Pizza"
                        android:textSize="@dimen/_16pxh"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Price: "
                android:textSize="@dimen/_20pxh"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:textSize="@dimen/_18pxh"
                android:textColor="@color/black"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFeedBack"
                style="@style/btnSolidRounded_5"
                android:layout_width="50dp"
                android:layout_weight="2"
                android:layout_height="@dimen/_38pxh"
                android:layout_gravity="center"
                android:text="Feed back"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>