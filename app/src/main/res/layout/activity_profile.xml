<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            tools:layout_editor_absoluteX="19dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageArrowleft"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft_black_900_16x9"
                        tools:ignore="ContentDescription"
                        android:layout_marginTop="7dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="13dp"
                        tools:src="@drawable/img_arrowleft_black_900_16x9" />

                    <TextView
                        android:id="@+id/txtProfile"
                        style="@style/txtMontserratromanbold28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginStart="15dp"
                        android:text="Profile"
                        tools:layout_editor_absoluteX="43dp"
                        tools:layout_editor_absoluteY="1dp"
                        tools:text="Profile" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtEdit"
                    style="@style/txtMontserratromanbold14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="220dp"
                    android:gravity="center_vertical|end"
                    android:text="Edit"
                    android:textColor="#FA6523"
                    android:textSize="18sp"
                    tools:text="Edit" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_layout"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.107"
                app:riv_oval="true"
                tools:src="@tools:sample/avatars" />
            <LinearLayout android:gravity="start"
                android:id="@+id/linearName"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.74"
                android:layout_width="0dp" android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtUsername"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:letterSpacing="0.08"
                        android:singleLine="true"
                        android:text="Username"
                        android:textAllCaps="true"
                        style="@style/txtPoppinsmedium16_2" tools:text="Username"/>

                    <ImageView
                        android:id="@+id/imgGender"
                        android:layout_marginStart="15dp"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" tools:src="@drawable/ic_male"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/bluegray_101"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="@dimen/_19pxh"
            android:layout_marginTop="@dimen/_14pxv" android:layout_width="@dimen/_340pxh"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_weight="0.71"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_email"
                    android:layout_height="20dp"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_email"/>

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/txtMontserratromanregular14_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.89"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Email" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_weight="0.71"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_height="20dp"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_phone"/>

                <TextView
                    android:id="@+id/txtPhone"
                    style="@style/txtMontserratromanregular14_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.89"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="Phone" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/viewRectangle4114"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/_16pxv"
            android:background="@color/bluegray_50" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent" android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_weight="0.71"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_home"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_home" />
                <TextView
                    android:id="@+id/txtAddress"
                    style="@style/txtMontserratromanregular14_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.89"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Home" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnEditHome"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/_66pxh"
                android:layout_width="@dimen/_80pxh"
                android:paddingBottom="@dimen/_5pxv"
                android:paddingEnd="@dimen/_13pxh"
                android:paddingStart="@dimen/_13pxh"
                android:paddingTop="@dimen/_5pxv"
                android:singleLine="true"
                android:text="Edit"
                android:textAllCaps="false"
                style="@style/btnSolidRounded_8" tools:text="Edit"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtLogout"
            style="@style/txtMontserratromanbold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="320dp"
            android:textColor="#FA6523"
            android:textSize="24sp"
            tools:text="Log out" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>